#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main()
{
    int p, input, dataset;
    scanf("%d",&p);
    for(int i=1; i<=p; i++){
        scanf("%d %d", &dataset, &input);
        int sone=0, stwo=0, sthree=0;
        for(int c=1; c<=input; c++){
            sone=sone+c;
        }
        for(int c=0; c<input; c++){
            stwo=stwo+(2*c)+1;
        }
        for(int c=1; c<=input; c++){
            sthree=sthree+(2*c);
        }
        printf("%d %d %d %d\n", i, sone, stwo, sthree);
    }
    return 0;
}
